record(calc, "$(P):$(D):VoltPos5V-Mon") {
    field(CALC, "(5.*A/4095.)*(1.5)")
    field(INPA, "$(P):$(D):ADC0-Mon.VAL[0] CP MSS")
    field(EGU, "V")
    field(DESC, "Tensão de saída da fonte de 5 Volts")
    field(MDEL, "0.001")
    field(DISV, "1")
    field(DISS, "INVALID")
    field(PREC, "4")
    field(SDIS, "$(P):$(D):ADC0-Mon_enbl")
}

