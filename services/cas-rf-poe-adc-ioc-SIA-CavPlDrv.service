[Unit]
Description=Sirius RF POE ADC - IOC
Wants=network-online.target
After=network-online.target

Wants=cas-rf-poe-adc-spi.service
After=cas-rf-poe-adc-spi.service

[Service]
Restart=always
RestartSec=10
Type=simple

WorkingDirectory=/opt/cas-rf-poe-adc/iocBoot/iocpoeAdc/
ExecStart=/usr/local/bin/procServ -f --allow -L - --chdir /opt/cas-rf-poe-adc/iocBoot/iocpoeAdc 20200 ./st-SIA-CavPlDrv.cmd

StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
